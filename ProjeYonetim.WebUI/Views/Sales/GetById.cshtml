@model ProjeYonetim.Entities.Sales

@{
    ViewData["Title"] = "GetById";
}

<h1 class="text-monospace text-info text-center">Satış Detay</h1>
<hr class="col-md-7 bg-danger" />
<hr class="col-md-7 bg-warning" />

<div class="row justify-content-center mx-auto col-md-5">
    <div class="row table table-bordered p-2 border-info">
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CustomerName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CustomerName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.SalesName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.SalesName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Employee)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Employee.FullName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.SalesDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.SalesDate)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>
    </div>
</div>
<div class="text-center justify-content-center mx-auto">
    <a asp-action="Update" asp-route-id="@Model.Id">Düzenle</a> |
    <a asp-action="GetAll">Geri dön</a>
</div>
