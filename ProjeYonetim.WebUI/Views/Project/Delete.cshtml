@model ProjeYonetim.Entities.Project

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-monospace text-info text-center">Proje Sil</h1>
<hr class="col-md-7 bg-danger" />
<hr class="col-md-7 bg-warning" />

<div class="row justify-content-center mx-auto col-md-5">
    <div class="row table table-bordered p-2 border-danger">
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Sales)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Sales.SalesName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ProjectName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ProjectName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ProjectDetail)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ProjectDetail)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.StartDate)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.EndDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.EndDate)
            </dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="text-center justify-content-center mx-auto">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="SalesId" />
    <input type="hidden" asp-for="ProjectName" />
    <input type="hidden" asp-for="ProjectDetail" />
    <input type="hidden" asp-for="StartDate" />
    <input type="hidden" asp-for="EndDate" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="GetAll">Geri dön</a>
</form>

