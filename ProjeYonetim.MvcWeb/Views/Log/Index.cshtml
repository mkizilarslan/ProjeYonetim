@model IEnumerable<ProjeYonetim.Entities.Logs>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-monospace  text-info text-center m-4">Log Kayıtları</h1>
<input class="form-control d-inline-block col-md-3" type="search" id="myInput" placeholder="Search..." onkeyup="myFunction()" aria-label="Search">
<table id="myTable" class="table table-bordered table-sm table-hover table-striped mt-1" cellspacing="0">
    <thead>
        <tr>
            <th class="col-md-4">
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th class="col-md-4">
                @Html.DisplayNameFor(model => model.MessageTemplate)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.TimeStamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MessageTemplate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeStamp)
                </td>
                <td>




                    <a asp-action="GetById" asp-route-id="@item.Id" data-toggle="modal" data-target="#exampleModalCenter" onclick="showInPopup ('@Url.Action("GetById","Log",item.Id,Context.Request.Scheme)','Log Detayları')"><i class="btn btn-info btn-sm fas fa-info-circle"></i></a>



                    <!-- Button trigger modal -->
                    @*<button asp-action="GetById" asp-route-id="@item.Id" type="button" onclick="showInPopup ('@Url.Action("GetById","Log",null,Context.Request.Scheme)','Log Detayları')" class="btn btn-info btn-sm btn-block" data-toggle="modal" data-target="#exampleModalCenter">
                    </button>*@

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div>
                                        <dl class="row">
                                            <dt class="col-sm-2">
                                                mesaj
                                            </dt>
                                            <dd class="col-sm-10">
                                                @item.Message
                                            </dd>
                                            <dt class="col-sm-2">
                                                MessageTemplate
                                            </dt>
                                            <dd class="col-sm-10">
                                                @item.MessageTemplate
                                            </dd>
                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.Level)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @item.Level
                                            </dd>
                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.TimeStamp)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @item.TimeStamp
                                            </dd>
                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.Exception)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @item.Exception
                                            </dd>
                                            <dt class="col-sm-2">
                                                @Html.DisplayNameFor(model => model.Properties)
                                            </dt>
                                            <dd class="col-sm-10">
                                                @item.Properties
                                            </dd>
                                        </dl>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
