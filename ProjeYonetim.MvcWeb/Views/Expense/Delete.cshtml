@model ProjeYonetim.Entities.Expense

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-monospace text-info text-center">Gider Sil</h1>
<hr class="col-md-7 bg-danger" />
<hr class="col-md-7 bg-warning" />

<div class="row justify-content-center mx-auto col-md-5">
    <div class="row table table-bordered p-2 border-danger">
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ExpenseName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ExpenseName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ExpenseAmount)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ExpenseAmount)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Project)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Project.ProjectName)
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="text-center justify-content-center mx-auto">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ExpenseName" />
    <input type="hidden" asp-for="ExpenseAmount" />
    <input type="submit" value="Sil" class="btn btn-danger" /> |
    <a asp-action="GetAll">Geri dön</a>
</form>
