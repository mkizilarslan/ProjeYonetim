@model IEnumerable<ProjeYonetim.Entities.Expense>

@{
    ViewData["Title"] = "GetAll";
}

<h1 class="text-monospace  text-info text-center m-4">Giderler</h1>
<input class="form-control d-inline-block col-md-3" type="search" id="myInput" placeholder="Search..." onkeyup="myFunction()" aria-label="Search">
<a class="btn btn-success float-right mb-2 col-md-2" asp-action="Create"><i class="fas fa-plus-square"> </i> Gider Ekle</a>
<table id="myTable" class="table table-bordered table-sm table-hover table-striped mt-1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpenseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpenseAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.ProjectName)
                </td>
                <td class="text-center col-md-2">
                    <a asp-action="Update" asp-route-id="@item.Id"><i class="btn btn-warning btn-sm fas fa-edit"></i></a>
                    <a asp-action="GetById" asp-route-id="@item.Id"><i class="btn btn-info btn-sm fas fa-info-circle"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="btn btn-danger btn-sm fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
