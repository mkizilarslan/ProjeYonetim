@model ProjeYonetim.Entities.Expense

@{
    ViewData["Title"] = "Update";
    var expenseProject = ViewData["ProjectId"] as SelectList;

}

<h1 class="text-center text-monospace text-info mt-5">Gider Güncelle</h1>
<hr class="col-md-7 bg-danger" />
<hr class="col-md-7 bg-warning" />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ExpenseName" class="control-label"></label>
                <input asp-for="ExpenseName" class="form-control shadow-lg" />
                <span asp-validation-for="ExpenseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseAmount" class="control-label"></label>
                <input asp-for="ExpenseAmount" class="form-control shadow-lg" />
                <span asp-validation-for="ExpenseAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectId" class="control-label"></label>
                <select asp-for="ProjectId" class="form-control shadow-lg" asp-items="expenseProject"></select>
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary btn-block " />
            </div>
        </form>
    </div>
</div>

<div class="justify-content-center text-center">
    <a asp-action="GetAll">Geri dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
