@model IEnumerable<ProjeYonetim.Entities.Project>
@inject ProjeYonetim.Data.Abstract.IProjectRepository deneme

@{
    ViewData["Title"] = "GetAll";
}

<h1 class="text-monospace  text-info text-center m-4">Projeler</h1>
<input class="form-control d-inline-block col-md-3" type="search" id="myInput" placeholder="Search..." onkeyup="myFunction()" aria-label="Search">
<a class="btn btn-success float-right mb-2 col-md-2" asp-action="Create"><i class="fas fa-plus-square"> </i> Proje Ekle</a>
<table id="myTable" class="table table-bordered table-sm table-hover table-striped mt-1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sales)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectDetail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                Net Gelir
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Sales.SalesName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectDetail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @deneme.GetProjectNetIncomeAsync(item.Id).Result.ToString() ₺
                </td>
                <td class="text-center col-md-2">
                    <a asp-action="Update" asp-route-id="@item.Id"><i class="btn btn-warning btn-sm fas fa-edit"></i></a>
                    <a asp-action="GetById" asp-route-id="@item.Id"><i class="btn btn-info btn-sm fas fa-info-circle"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="btn btn-danger btn-sm fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
